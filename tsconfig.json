{
  "compilerOptions": {
    "lib": ["es6"],
    "outDir": "build",
    "removeComments": true,
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "/src",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/**/*"]
}